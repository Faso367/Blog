@model LoginViewModel

@{
}

<link href="~/css/Login.css" rel="stylesheet" />
<div class="login-body">
    <div class="ramka">
        <div class="form-wrapper">
            <div class="h1-wrapper">Авторизация</div>
            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="form-input-container">

                    <div class="form-group">
                        <input asp-for="UserName" name="username" id="name" placeholder="Имя пользователя" />
                        <span class="errors"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" name="password" id="pas" placeholder="Пароль" />
                        <span class="errors"></span>
                    </div>

                    <input type="submit" value="Войти" id="but"/>
                </div>
            </form>
            <a asp-controller="Auth" asp-action="Register"> <p>Зарегистрироваться</p></a>
        </div>
    </div>
</div>
<script src="~/js/LoginValidation.js"></script>