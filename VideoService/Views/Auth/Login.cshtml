@model LoginViewModel

@{}

<link href="~/css/Login.css" rel="stylesheet" />
<div class="login-body">
    <div class="ramka">
        <div class="form-wrapper">
            <div class="h1-wrapper">Авторизация</div>

            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="form-input-container">
                    <input asp-for="UserName" id="name" placeholder="Имя пользователя" required/>
                    <input asp-for="Password" id="pas" placeholder="Пароль" required />
                    <span asp-validation-for="Password"></span>
                    <input type="submit" value="Войти" id="but"/>
                </div>
            </form>
            <a asp-controller="Auth" asp-action="Register"> <p>Зарегистрироваться</p></a>
        </div>
    </div>
</div>