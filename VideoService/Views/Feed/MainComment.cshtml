@model CommentViewModel

@{
}

<link rel="stylesheet" href="~/css/MainComment.css"/>
<h1 class="comments-title">Комментарии</h1>

<div class="IsAuthenticated" style="display: none; overflow: hidden;">@User.Identity.IsAuthenticated</div>

<div class="modal-window" id="modal">
    <button id="closeModal"></button>
    <div class="modal-window-inner">

        <p>Авторизуйтесь, чтобы оставить комментарий</p>
        <a asp-action="Login" asp-controller="Auth">Вход</a>
    </div>
</div>


<div class="send-comment">

    <form method="post" asp-controller="Feed" asp-action="Comment"> 
        <input asp-for="PostId" type="hidden"/>
        <input asp-for="MainCommentId" type="hidden" />

        <textarea asp-for="Message" oninput="auto_grow(this)" placeholder="Введите комментарий" id="comment-textarea"></textarea>
        @*<textarea asp-for="Message" placeholder="Введите комментарий" id="comment-textarea"></textarea>*@
        <button type="submit" id="send-comment-but">Отправить</button>
    </form>
</div>

<script src="~/js/MainComment.js"></script>